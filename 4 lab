            //3 часть 3 номер
            Console.WriteLine( "введите размерность квдратной матрицы-желательно больше 2");
            Random random = new Random();
            int[,] a;
            string s = Console.ReadLine();
            int kol = 0;
            int n;
            bool val =  int.TryParse(s, out n);
            if (val)
            {
                kol = n;
            }
            else
            {
                Console.WriteLine("введено неверно");
            }
            int index = 0;
            a = new int[kol, kol];
            for (int i = 0; i < kol; i++)
            {
                for (int j = 0; j < kol; j++)
                {
                    a[i, j] = random.Next(1, 9);
                }
            }
            Console.WriteLine("Вывод исходной матрицы");
            for (int i = 0; i < kol; i++)
            {
                for (int j = 0; j < kol; j++)
                {
                    Console.Write(a[i,j] + " ");
                }
                Console.WriteLine();
            }
            int[] mass = new int[2 * kol - 1];
            int sum = 0;
            
            
            for (int i = 1,lox = 1; i < kol;lox++, i++)
            {
                sum = 0;
                
                for (int j = 0; j < kol - lox; j++)
                {
                    sum += a[i + j, j];
                }
               
                mass[index] = sum;
                index += 1;
            }
            sum = 0;
            for (int i = 0; i < kol; i++)
            {
                sum += a[i, i];
            }
            mass[index] = sum;

            index += 1;
            for (int i = 1,lox_2 = 1; i < kol ;lox_2++, i++)
            {
                sum = 0;
                for (int j = 0; j < kol - lox_2; j++)
                {
                    sum += a[j, i + j];
                }
                
                mass[index] = sum;
                index++;
            }
            Console.WriteLine("Вывод mass");
            for (int i = 0; i < mass.Length; i++)
            {
                Console.Write(mass[i] + " ");
            }
            Console.Read();
            
            //3 part task 11
            string s = Console.ReadLine();
            int kol;
            int[,] a;
            bool rtu = int.TryParse(s, out kol);
            if (rtu)
            {
                a = new int[kol, kol];
            }
            else
            {
                Console.WriteLine("что-то неверно");
                return;
            }
            for (int i = 0; i < kol; i++)
            {
                for (int j = 0; j < kol; j++)
                {
                    Console.Write($"Введите значение элемента в строке {i + 1} и  столбце {j + 1}: ");
                    string l = Console.ReadLine();
                    int f;
                    bool val = int.TryParse(l, out f);
                    if (val)
                    {
                        a[i, j] = f;
                    }
                    else
                    {
                        Console.WriteLine("неверный ввод");
                        return;
                    }
                }
            }
            Console.WriteLine("Вывод исходной матрицы");
            for (int i = 0; i < kol; i++)
            {
                for (int j = 0; j < kol; j++)
                {
                    Console.Write(a[i,j] + " ");
                }
                Console.WriteLine();
            }
            int count = 0;
            for (int i = 0; i < kol; i++)
            {
                for (int j = 0; j < kol; j++)
                {
                    if (a[i,j] == 0)
                    {
                        count += 1;
                        
                        int stroka = i;
                        if (count == kol)
                        {
                            Console.WriteLine("нечего выводить -  все строки были удалены");
                            break;
                        }
                        for (int l = stroka; l < kol - count; l++)
                        {
                            for (int f = 0; f < kol; f++)
                            {
                                a[l, f] = a[l + 1, f];
                            }
                        }
                    }
                   
                    
                    
                }
            }
            if (count != kol)
            {

                Console.WriteLine("вывод обработанной матрицы");
                for (int i = 0; i < kol - count; i++)
                {
                    for (int j = 0; j < kol; j++)
                    {
                        Console.Write(a[i, j] + " ");
                    }
                    Console.WriteLine();
                }
            }
                Console.ReadLine();
                
                
                
                
                //3 часть 10 номер
        static void Main(string[] args)
        {
            Random random = new Random();
            Console.Write("Ввести  чётное кол-во строк и столбцов:     ");
            string s = Console.ReadLine();
            int n;
            bool val = int.TryParse(s, out n);

            int[,] mat;
            if (val && (n % 2 == 0))
            {
                mat = new int[n, n];
            }
            else
            {
                Console.WriteLine("введено неправильно");
                return;
            }
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    mat[i, j] = random.Next(-10, 40);
                }
            }
            Console.WriteLine("Вывод исходной матрицы:");
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    Console.Write("{0:d} ", mat[i, j]);
                }
                Console.WriteLine();
            }
            //по убыванию
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j+=2)
                {
                    int amin = mat[i, j];
                    int fmin = j;
                    for (int f = 0; f < n; f+=2)
                    {
                        if (mat[i,f] < amin)
                        {
                            amin = mat[i,f];
                            fmin = f;
                        }
                    }
                    mat[i, fmin] = mat[i, j];
                    mat[i, j] = amin;
                }
            }
            for (int i = 0; i < n; i++)
            {
                for (int j = 1; j < n; j+=2)
                {
                    int amax = mat[i, j];
                    int jmax = j;
                    for (int f = j; f < n; f+=2)
                    {
                        if (mat[i,f] < amax)
                        {
                            amax = mat[i,f];
                            jmax = f;
                        }
                    }
                    mat[i, jmax] = mat[i, j];
                    mat[i, j] = amax;
                }
            }
            Console.WriteLine("вывод обработанной матрицы");
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    Console.Write("{0:d} ", mat[i, j]);
                }
                Console.WriteLine();
            }
            Console.ReadLine();
            
            
             //3 часть 4 номер
            Random random = new Random();
            Console.Write("количество строк и столбцов:     ");
            string s = Console.ReadLine();
            int n;
            bool val = int.TryParse(s, out n);
            
            int[,] mat;
            if (val)
            {
                mat = new int[n, n];
            }
            else
            {
                Console.WriteLine("введено неправильно");
                return;
            }
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    mat[i, j] = random.Next(1, 10);
                }
            }
            
            for (int i = (n / 2); i < n; i++)
            {
                for (int j  = 0; j < i; j++)
                {
                    mat[i, j] = 1;
                }
            }
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    Console.Write("{0:d} ", mat[i,j]);
                }
                Console.WriteLine();
            }
            Console.Read();
            
        
        
