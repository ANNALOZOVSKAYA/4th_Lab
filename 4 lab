            int[,] C = new int[2, strok];
            int index_C = 0;
            for (int i = 0; i < a.GetLength(0); i++)
            {
                count = 0;
                for (int j = 0; j < a.GetLength(1); j++)
                {
                    imax = i;
                    if (a[i,j] > 0)
                    {
                        count++;
                    }
                }
                C[0, index_C] = count;
                C[1, index_C] = imax;
                index_C += 1;
            }
            Console.WriteLine("Вывод матрицы C");
            for (int i = 0; i < 2; i++)
            {
                for (int j = 0; j < strok; j++)
                {
                    Console.Write(C[i,j] + " ");
                }
                Console.WriteLine();
            }
                
            for (int i = 0; i < 1; i++)
            {
                

                for (int j = 0; j < C.GetLength(1); j++)
                {
                    for (int f = j; f < C.GetLength(1); f++)
                    {
                        if (C[i,f] > C[i,j])
                        {
                            int temp = C[i, j];
                            C[i,j] = C[i,f];
                            C[i, f] = temp;
                            int i_temp = C[i + 1, j];
                            C[i + 1, j] = C[i + 1, f];
                            C[i + 1, f] = i_temp;


                        }
                    }
                }
            }
            Console.WriteLine("Вывод отредактированного двухмерного массива С");
            for (int i = 0; i < 2; i++)
            {
                for (int j = 0; j < strok; j++)
                {
                    Console.Write(C[i,j] + " ");
                }
                Console.WriteLine();
            }
            int[,] new_matrix = new int[strok, stolb];
            for (int i = 0; i < a.GetLength(0); i++)
            {
                for (int j = 0; j < a.GetLength(1); j++)
                {
                    new_matrix[i, j] = a[C[1,i],j];
                }
            }
            Console.WriteLine("Вывод матрицы new_matrix");
            for (int i = 0; i < strok; i++)
            {
                for (int j = 0; j < stolb; j++)
                {
                    Console.Write(new_matrix[i,j] + " ");
                }
                Console.WriteLine();
            }
            Console.ReadLine();
            
            
            
             //3 часть 2 номер
            Random r = new Random();
            string n = Console.ReadLine();
            int s;
            int kol;
            bool val = int.TryParse(n, out s);
            if (val)
            {
                 kol = s;
            }
            else
            {
                Console.WriteLine("введено неверно");
                return;
            }
            int[,] a = new int[kol,kol];
            for (int i = 0; i < kol; i++)
            {
                for (int j = 0; j < kol; j++)
                {
                    a[i, j] = r.Next( 1 , 9);
                }
            }
            for (int i = 0; i < kol; i++)
            {
                if (i < kol)
                {
                    a[i, 0] = 0;
                    a[i, kol - 1] = 0;
                }
                if (i < kol)
                {
                    a[0, i] = 0;
                    a[kol - 1,i] = 0;
                }

            }
            for (int i = 0; i < kol; i++)
            {


                for (int j = 0; j < kol; j++)
                {
                    Console.Write("{0:d} ", a[i,j]);
                }
                Console.WriteLine();
            }
            Console.Read();
            
            
