        static void Main(string[] args)
        {
            int[,] a = new int[6, 7];
            Random r = new Random();
            for (int i = 0; i <  6; i++)
            {
                for (int j = 0; j < 7; j++)
                {
                    a[i, j] = r.Next(-20, 40);
                }
            }
            Console.WriteLine("вывод исходной матрицы");
            for (int i = 0; i < 6; i++)
            {
                for (int j = 0; j < 7; j++)
                {
                    Console.Write("{0:d} ", a[i,j]);
                }
                Console.WriteLine();
            }
            int temp;
            int n = 1;
            for (int i = 0; i < 6; i++)
            {
                for (int j = 0; j < a.GetLength(1) / 2; j++)
                {
                    temp = a[i, j];
                    a[i, j] = a[i, a.GetLength(1) - n];
                    a[i, a.GetLength(1) - n] = temp;
                    n += 1;

                }
                n = 1;
            }
            Console.WriteLine("Вывод обработанной матрицы");
            for (int i = 0; i < 6; i++)
            {
                for (int j = 0; j < 7; j++)
                {
                    Console.Write("{0:d} ", a[i, j]);
                }
                Console.WriteLine();
            }
